{
    "name": "species/app",
    "description": "Yet another Simple Application Framework.",
    "type": "library",

    "autoload": {
        "classmap": ["src/App.php"],
        "psr-4": {
            "Species\\App\\": "src/App"
        }
    },

    "autoload-dev": {
        "classmap": ["tests/AppTest.php"],
        "psr-4": {
            "Species\\App\\": "tests/App"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },

    "require": {
        "slim/slim": "^3.10",
        "slim/twig-view": "^2.4",
        "slim/http-cache": "^0.4.0",
        "twig/twig": "^2.5",
        "php-di/php-di": "^6.0",
        "php-di/slim-bridge": "^2.0",

        "php": "^7.2",
        "ext-json": "^1.6"
    }
}
